<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#33000000">

    <LinearLayout
        android:id="@+id/tvBottomBarWidgetContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <com.previewseekbar.PreviewSeekBarLayout
            android:id="@+id/previewSeekBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/previewFrameLayout"
                android:layout_width="@dimen/video_preview_width"
                android:layout_height="@dimen/video_preview_height"
                tools:background="#50ff0000"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/preview_image" />

            </FrameLayout>

            <com.imggaming.widgets.DceSeekIndicator
                android:id="@+id/seekIndicator"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/previewFrameLayout" />

            <com.previewseekbar.PreviewSeekbarTV
                style="@style/TVSeekBar"
                android:id="@+id/previewSeekBar"
                android:paddingTop="8dp"
                android:paddingBottom="17dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/seekIndicator"
                android:focusableInTouchMode="false"
                android:focusable="true"
                android:nextFocusRight="@+id/tvPlayPauseImageView"
                android:nextFocusDown="@+id/tvPlayPauseImageView">
                <requestFocus/>
            </com.previewseekbar.PreviewSeekbarTV>

        </com.previewseekbar.PreviewSeekBarLayout>

        <LinearLayout
            android:id="@+id/bottomBarWidget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:paddingTop="8dp">

            <ImageButton
                android:id="@+id/tvPlayPauseImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:scaleType="centerInside"
                android:layout_marginRight="8dp"
                android:contentDescription="@string/play_video"
                android:focusable="true"
                android:focusableInTouchMode="false"
                android:background="@null"
                android:src="@drawable/tv_play_btn_selector">
            </ImageButton>

            <ImageButton
                android:id="@+id/tvAudioSubtitlesBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:scaleType="centerInside"
                android:focusable="true"
                android:focusableInTouchMode="false"
                android:layout_marginRight="8dp"
                android:background="@null"
                android:contentDescription="Audio and subtitles"
                android:src="@drawable/tv_audio_subtitles_selector" />

            <ImageButton
                android:id="@+id/tvScheduleBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:scaleType="centerInside"
                android:focusable="true"
                android:focusableInTouchMode="false"
                android:background="@null"
                android:src="@drawable/tv_epg_selector" />

            <View
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/currentTimeTextView"
                android:textAppearance="@style/TextAppearance.OverlayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingBottom="1dp"
                android:text="00:00:00 / 00:00:00"
                android:textAlignment="center"
                android:ellipsize="end"
                android:maxLines="1" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/liveTextView"
                android:textAppearance="@style/TextAppearance.LiveText"
                android:focusableInTouchMode="false"
                android:focusable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp"
                android:background="@drawable/bg_live"
                android:gravity="center"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/live"
                android:textAlignment="center" />

            <ImageButton
                android:id="@+id/bottomRightIconButton"
                android:focusableInTouchMode="false"
                android:focusable="false"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="#00000000"
                android:contentDescription="@string/fullscreen"
                android:gravity="center"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:src="@drawable/ic_fullscreen_off"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tvLabelContainerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="24dp">
            <TextView
                android:id="@+id/tvLabelView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:visibility="visible"
                tools:text="Audio &amp; Subtitles" />
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>